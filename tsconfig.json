{
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "out",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": true,
    "target": "es2021",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
  }
}